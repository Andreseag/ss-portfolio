---
import Layout from '../layouts/Layout.astro';

const projects = [
  { title: 'The Silent Frame', category: 'Short Film', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1485846234645-a62644f84728?q=80&w=1200' },
  { title: 'Urban Echoes', category: 'Music Video', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1478720568477-152d9b164e26?q=80&w=1200' },
  { title: 'Midnight Motion', category: 'Commercial', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1536244636800-a3f74db0f3cf?q=80&w=1200' },
  { title: 'Aperture Series', category: 'Documentary', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1550684848-fac1c5b4e853?q=80&w=1200' },
  { title: 'Deep Focus', category: 'Experimental', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1485846234645-a62644f84728?q=80&w=1200' },
  { title: 'Grain & Light', category: 'Studio', vimeoId: '76979871', image: 'https://images.unsplash.com/photo-1523206489230-c012c64b2b48?q=80&w=1200' },
];

const mainProjects = projects.slice(0, 3);
const gridProjects = projects.slice(3);
---

<Layout title="Projects — San Productions">
  <section class="pt-40 px-8 md:px-20 pb-20 max-w-400 mx-auto">
    
    <div class="flex flex-col gap-y-32 mb-32">
      {mainProjects.map((project) => (
        <div class="project-item group cursor-pointer" data-vimeo-id={project.vimeoId}>
          <div class="overflow-hidden bg-zinc-900 aspect-video md:max-h-[80vh]">
            <img src={project.image} alt={project.title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-1000 ease-in-out scale-105 group-hover:scale-100" />
          </div>
          <div class="mt-6 flex justify-between items-baseline uppercase tracking-tighter border-b border-zinc-100 pb-4">
            <h2 class="text-2xl md:text-4xl font-light italic">{project.title}</h2>
            <span class="text-[10px] font-mono tracking-widest opacity-40">[{project.category}]</span>
          </div>
        </div>
      ))}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20">
      {gridProjects[0] && (
        <div class="project-item group cursor-pointer flex flex-col" data-vimeo-id={gridProjects[0].vimeoId}>
          <div class="overflow-hidden bg-zinc-900 aspect-3/4"> 
            <img src={gridProjects[0].image} alt={gridProjects[0].title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-1000" />
          </div>
          <div class="mt-6 uppercase tracking-tighter border-b border-zinc-100 pb-4">
            <h2 class="text-xl font-light italic">{gridProjects[0].title}</h2>
            <p class="text-[9px] font-mono opacity-40 mt-1">[{gridProjects[0].category}]</p>
          </div>
        </div>
      )}

      <div class="flex flex-col justify-between">
        {gridProjects.slice(1, 3).map((project, index) => (
          <div class={`project-item group cursor-pointer ${index === 0 ? 'mb-12 md:mb-0' : ''}`} data-vimeo-id={project.vimeoId}>
            <div class="overflow-hidden bg-zinc-900 aspect-video">
              <img src={project.image} alt={project.title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-1000" />
            </div>
            <div class="mt-4 uppercase tracking-tighter border-b border-zinc-100 pb-4">
              <h2 class="text-lg font-light italic">{project.title}</h2>
              <p class="text-[9px] font-mono opacity-40 mt-1">[{project.category}]</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div id="video-modal" class="fixed inset-0 z-100 flex items-center justify-center bg-black/95 opacity-0 pointer-events-none transition-opacity duration-500 backdrop-blur-sm">
    <button id="close-modal" class="absolute cursor-pointer top-10 right-10 text-white text-[10px] tracking-[0.3em] uppercase hover:opacity-50 transition-opacity">
      Cerrar / Esc
    </button>
    <div class="w-full max-w-7xl px-6 aspect-video">
      <iframe id="vimeo-player" src="" class="w-full h-full" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
    </div>
  </div>
</Layout>

<script>
  // Lógica de apertura/cierre
  const modal = document.getElementById('video-modal');
  const iframe = document.getElementById('vimeo-player') as HTMLIFrameElement;
  const closeBtn = document.getElementById('close-modal');
  const projectItems = document.querySelectorAll('.project-item');

  projectItems.forEach(item => {
    item.addEventListener('click', () => {
      const vimeoId = item.getAttribute('data-vimeo-id');
      if (iframe && vimeoId) {
        iframe.src = `https://player.vimeo.com/video/${vimeoId}?autoplay=1&color=ffffff&title=0&byline=0&portrait=0`;
        modal?.classList.remove('opacity-0', 'pointer-events-none');
        document.body.style.overflow = 'hidden';
      }
    });
  });

  function closeModal() {
    modal?.classList.add('opacity-0', 'pointer-events-none');
    if (iframe) iframe.src = "";
    document.body.style.overflow = 'auto';
  }

  closeBtn?.addEventListener('click', closeModal);
  window.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal(); });
  modal?.addEventListener('click', (e) => { if (e.target === modal) closeModal(); });
</script>